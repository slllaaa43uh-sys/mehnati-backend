# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Connection
# استبدل <username> و <password> ببيانات المستخدم الخاصة بك من MongoDB Atlas
MONGODB_URI=mongodb+srv://<username>:<password>@cluster0.veesr0j.mongodb.net/mehnati?retryWrites=true&w=majority&appName=Cluster0

# JWT Secret - قم بتغييره لقيمة عشوائية آمنة في الإنتاج
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=30d

# Cloudinary Configuration
# احصل على هذه القيم من لوحة تحكم Cloudinary الخاصة بك
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Email Configuration (SMTP) - إعدادات البريد الإلكتروني
# يمكنك استخدام Gmail أو أي خدمة SMTP أخرى
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_EMAIL=your_email@gmail.com
SMTP_PASSWORD=your_app_password
FROM_NAME=مهنتي لي
FROM_EMAIL=noreply@mehnati.com

# Frontend URL - رابط الواجهة الأمامية (لروابط إعادة تعيين كلمة المرور)
FRONTEND_URL=https://your-frontend-url.com
